# Production Environment Variables
# Copy this to .env for production deployment

# Database Configuration
# For Docker Compose: use the service name 'db' as host
DATABASE_URL=postgresql://postgres:your_secure_password_here@db:5432/blogdb

# For external database (e.g., managed PostgreSQL):
# DATABASE_URL=postgresql://user:password@your-db-host:5432/dbname

# Session Secret (REQUIRED - generate with: openssl rand -hex 32)
SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING

# Server Configuration
NODE_ENV=production
PORT=5000

# PostgreSQL Password (for docker-compose)
POSTGRES_PASSWORD=your_secure_password_here

# Optional: AI API Keys (if your app uses them)
# OPENAI_API_KEY=your_openai_key
# GOOGLE_AI_API_KEY=your_google_ai_key
