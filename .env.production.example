# Production Environment Variables
# Copy this to .env for production deployment

# Database Configuration (Supabase)
# Get this from your Supabase project settings -> Database -> Connection String
# Use the "Connection Pooling" URL for better performance
DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres

# Session Secret (REQUIRED - generate with: openssl rand -hex 32)
SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING

# Server Configuration
NODE_ENV=production
PORT=5000

# Optional: AI API Keys (if your app uses them)
# OPENAI_API_KEY=your_openai_key
# GOOGLE_AI_API_KEY=your_google_ai_key
